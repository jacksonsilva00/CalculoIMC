<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity"
    android:orientation="vertical"

    >

    <TextView
        android:text="Demonstração das Views Android"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:padding="5dp"
        />
    <Button
        android:id="@+id/btnTextViewDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView Demo"
        />
    <Button
        android:id="@+id/btnEditTextDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Text Demo"
        />
    <Button
        android:id="@+id/btnImageViewDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image View Demo"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnDemoView"
        android:text="Demo View"
        />
    <Button
        android:id="@+id/btnImageButton"
        android:text="Image Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/btnCheckBox"
        android:text="Check Box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Progress Demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnProgressDemo"
        />
    <Button
        android:text="Alert Dialog"
        android:id="@+id/btnAlertDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Alert Dialog"
        android:id="@+id/btnScrollViewDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>