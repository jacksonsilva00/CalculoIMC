<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_teste_soma"
    tools:context="br.senac.pi.projetoteste.TesteSoma"
    android:orientation="vertical"
    >
    <TextView
        android:text="@string/Numero1"
        style="@style/TemaText"
        android:layout_margin="@dimen/margin_bottom"
        />
    <EditText
        android:id="@+id/edtN1"
        android:inputType="number"
        style="@style/TemaEdt"
        android:layout_margin="@dimen/margin_bottom"
        />
    <TextView
        android:layout_margin="@dimen/margin_bottom"
        android:text="@string/Numero2"
        style="@style/TemaText"
        />
    <EditText
        android:id="@+id/edtN2"
        android:inputType="number"
        style="@style/TemaEdt"
        android:layout_margin="@dimen/margin_bottom"
        />
    <LinearLayout
        style="@style/TemaText"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnsomar"
            style="@style/TemaText"
            android:text="+"
            />
        <Button
            android:id="@+id/btnsubtrair"
            style="@style/TemaText"
            android:text="-"
            />
        <Button
            android:id="@+id/btnmultiplicar"
            style="@style/TemaText"
            android:text="*"
            />
        <Button
            android:id="@+id/btndividir"
            style="@style/TemaText"
            android:text="/"
            />
    </LinearLayout>
    <TextView
        android:layout_margin="@dimen/margin_bottom"
        android:id="@+id/txtResult"
        android:text=" "
        style="@style/TemaText"
        />
</LinearLayout>
